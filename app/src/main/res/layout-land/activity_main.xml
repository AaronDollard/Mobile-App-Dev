<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jogging"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/layout_bg"
        android:text="Steps"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtv_steps"
        android:layout_width="202dp"
        android:layout_height="64dp"
        android:background="@drawable/layout_bg"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSteps"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:background="@drawable/layout_bg"
        android:text="Time"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtv_timer_minute"
        app:layout_constraintEnd_toEndOf="@+id/txtv_timer_second"
        app:layout_constraintStart_toStartOf="@+id/txtv_timer_hour" />

    <TextView
        android:id="@+id/txtv_timer_second"
        android:layout_width="97dp"
        android:layout_height="67dp"
        android:background="@drawable/layout_bg"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_timer_minute"
        app:layout_constraintStart_toEndOf="@+id/txtv_timer_minute" />

    <TextView
        android:id="@+id/txtv_timer_hour"
        android:layout_width="97dp"
        android:layout_height="67dp"
        android:background="@drawable/layout_bg"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_timer_minute"
        app:layout_constraintEnd_toStartOf="@+id/txtv_timer_minute" />

    <TextView
        android:id="@+id/txtv_timer_minute"
        android:layout_width="97dp"
        android:layout_height="67dp"
        android:background="@drawable/layout_bg"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />

    <Button
        android:id="@+id/btn_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:onClick="doResult"
        android:text="Show run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:onClick="doReset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:onClick="doStop"
        android:text="Stop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:background="@drawable/layout_bg"
        android:onClick="doStart"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

</androidx.constraintlayout.widget.ConstraintLayout>